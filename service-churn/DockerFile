# Use lightweight Python image
FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy all files (app.py and .pkl models)
COPY . .

# Cloud Run uses port 8080 by default, expose it
ENV PORT=8080

# Run the application using Gunicorn (Production Server)
# Workers = 1 is enough for free tier demo
CMD ["sh", "-c", "exec gunicorn --bind :$PORT --workers 1 --threads 8 --timeout 0 app:app"]